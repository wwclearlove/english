<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="vertical"
              tools:context=".activity.StaticsActivity">

    <include layout="@layout/window_touming" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_48_dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimension_36_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_14_dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_6_dp"
            android:layout_weight="1"
            android:text="学习统计"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_24_dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimension_20_dp"
                android:layout_marginRight="@dimen/dimension_20_dp"
                android:layout_marginTop="@dimen/dimension_10_dp"
                android:background="@drawable/register_sharp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimension_10_dp"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:paddingRight="@dimen/dimension_10_dp"
                android:paddingTop="@dimen/dimension_6_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlesbg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="个人信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:layout_width="@dimen/dimension_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="姓名："
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="性别："
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp"/>

                    <TextView
                        android:id="@+id/user_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="学校专业:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp"/>

                    <TextView
                        android:id="@+id/user_school"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimension_4_dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimension_2_dp"
                    android:text="电话:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimension_16_dp"/>
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimension_20_dp"
                android:layout_marginRight="@dimen/dimension_20_dp"
                android:layout_marginTop="@dimen/dimension_10_dp"
                android:background="@drawable/register_sharp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimension_10_dp"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:paddingRight="@dimen/dimension_10_dp"
                android:paddingTop="@dimen/dimension_6_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlesbg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="客观题练习情况"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:id="@+id/tv_sub_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答对了：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView

                        android:id="@+id/tv_sub_right_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="正确率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView

                        android:id="@+id/tv_sub_wrong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答错了：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView

                        android:id="@+id/tv_sub_wrong_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="错误率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:id="@+id/tv_sub_already"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="已答题：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_sub_already_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答题率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimension_20_dp"
                android:layout_marginRight="@dimen/dimension_20_dp"
                android:layout_marginTop="@dimen/dimension_10_dp"
                android:background="@drawable/register_sharp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimension_10_dp"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:paddingRight="@dimen/dimension_10_dp"
                android:paddingTop="@dimen/dimension_6_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlesbg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="模拟考试情况（最近一次）"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView

                        android:id="@+id/tv_test_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答对了：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_test_right_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="正确率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:id="@+id/tv_test_wrong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答错了：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_test_wrong_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="错误率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:id="@+id/tv_test_already"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="已答题：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_test_already_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="答题率：0%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimension_20_dp"
                android:layout_marginRight="@dimen/dimension_20_dp"
                android:layout_marginTop="@dimen/dimension_10_dp"
                android:background="@drawable/register_sharp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimension_10_dp"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:paddingRight="@dimen/dimension_10_dp"
                android:paddingTop="@dimen/dimension_6_dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titlesbg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="收藏情况"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView
                        android:id="@+id/tv_collect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="我的收藏：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_4_dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimension_4_dp">

                    <TextView

                        android:id="@+id/tv_wrong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="我的错题：0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_16_dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
