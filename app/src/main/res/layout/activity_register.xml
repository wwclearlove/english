<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/toolbar"
    android:orientation="horizontal"
    android:layout_height="@dimen/dimension_48_dp">
    <ImageView
        android:layout_width="@dimen/dimension_40_dp"
        android:layout_height="@dimen/dimension_40_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimension_10_dp"
        android:src="@drawable/icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="用户注册"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dimension_14_dp"
        android:textSize="@dimen/dimension_26_dp"/>
</LinearLayout>
    <!--中间部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="@dimen/dimension_0_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimension_6_dp"
            android:paddingBottom="@dimen/dimension_6_dp"
            android:gravity="center"
            android:text="用户注册信息"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_22_dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a7a6a3"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名(*):"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:id="@+id/register_name"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码(*):"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:id="@+id/register_pwd"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码(*):"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:inputType="textPassword"
                android:id="@+id/register_pwdt"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
        </LinearLayout>

        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <RadioGroup
                android:id="@+id/register_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_42_dp"
            android:layout_gravity="center_vertical"
                android:background="@drawable/register_lin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dimension_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimension_22_dp"
                    android:gravity="center_vertical"
                    android:text="性别:"/>
                <RadioButton
                    android:id="@+id/man"
                    android:layout_marginLeft="@dimen/dimension_20_dp"
                    android:layout_width="@dimen/dimension_0_dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dimension_22_dp"
                    android:layout_weight="1"
                    android:text="男"/>

                <RadioButton
                    android:id="@+id/secrecy"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimension_5_dp"
                    android:layout_weight="1"
                    android:text="保密"
                    android:textSize="@dimen/dimension_22_dp"/>
                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="@dimen/dimension_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimension_22_dp"
                    android:layout_marginLeft="@dimen/dimension_20_dp"
                    android:text="女"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号(*):"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:id="@+id/register_phone"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
        </LinearLayout>
        <!--4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:id="@+id/register_code"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="@dimen/dimension_100_dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimension_1_dp"
                android:layout_marginBottom="@dimen/dimension_1_dp"
                android:layout_marginRight="@dimen/dimension_1_dp"
                android:gravity="center"
                android:clickable="true"
                android:textSize="@dimen/dimension_16_dp"
                android:background="@drawable/code_shape"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!--5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/register_lin"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:layout_height="@dimen/dimension_44_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校专业:"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:textSize="@dimen/dimension_22_dp"/>
            <EditText
                android:id="@+id/register_school"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/dimension_10_dp"
                android:maxLength="20"
                android:textSize="@dimen/dimension_18_dp"
                android:gravity="start|center_vertical"/>
        </LinearLayout>
        <!--6-->

    </LinearLayout>


    <!--最下面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_44_dp"
        android:layout_marginLeft="@dimen/dimension_20_dp"
        android:layout_marginTop="@dimen/dimension_8_dp"
       android:layout_marginBottom="@dimen/dimension_10_dp"
        android:layout_marginRight="@dimen/dimension_20_dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_05"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_18_dp"
            android:layout_marginRight="@dimen/dimension_4_dp"
            />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_03"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_18_dp"
            android:layout_marginLeft="@dimen/dimension_4_dp"

            />

    </LinearLayout>

</LinearLayout>