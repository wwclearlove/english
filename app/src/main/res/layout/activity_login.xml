<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_90_dp"
            android:layout_marginLeft="@dimen/dimension_40_dp"
            android:layout_marginRight="@dimen/dimension_40_dp"
            android:layout_marginTop="@dimen/dimension_20_dp"
            android:background="@drawable/login_lin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_0_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimension_26_dp"
                    android:layout_height="@dimen/dimension_26_dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimension_10_dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/login_icon_account"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入电话号码"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimension_10_dp"
                    android:textSize="@dimen/dimension_14_dp"
                    />
            </LinearLayout>
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D0CFCD"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_0_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimension_26_dp"
                    android:layout_height="@dimen/dimension_26_dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimension_10_dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/login_icon_password"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码..."
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimension_10_dp"
                    android:textSize="@dimen/dimension_14_dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_44_dp"
            android:layout_marginLeft="@dimen/dimension_40_dp"

            android:layout_marginRight="@dimen/dimension_40_dp"
            android:layout_marginTop="@dimen/dimension_10_dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimension_4_dp"
                android:layout_weight="1"
                android:background="@drawable/btn_03"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_18_dp"

                />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="@dimen/dimension_0_dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimension_4_dp"
                android:background="@drawable/btn_05"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_18_dp"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>