<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.RegisterActivity">

    <include layout="@layout/window_touming" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_48_dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimension_36_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_14_dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_6_dp"
            android:text="本次考试结果"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_24_dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimension_4_dp"
            android:text="得分：1分"
            android:textColor="@color/result"
            android:textSize="@dimen/dimension_32_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:background="@drawable/register_sharp"
            android:orientation="vertical"
            android:padding="@dimen/dimension_10_dp">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension_4_dp"
                android:text="本次考试共25题"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_20_dp" />

            <TextView
                android:id="@+id/tv_already"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension_4_dp"
                android:text="已答：3题"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_20_dp" />

            <TextView
                android:id="@+id/tv_unalready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension_4_dp"
                android:text="未答：37题"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_20_dp" />

            <TextView
                android:id="@+id/tv_rigth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension_4_dp"
                android:text="答对：1题"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_20_dp" />

            <TextView
                android:id="@+id/tv_costtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension_4_dp"
                android:text="耗时：04:14"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_20_dp" />

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/dimension_10_dp"
                android:text="再多多努力哦"
                android:textColor="@color/black"
                android:textSize="@dimen/dimension_24_dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_look_wrong"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/dimension_20_dp"
            android:layout_marginRight="@dimen/dimension_20_dp"
            android:layout_marginTop="@dimen/dimension_18_dp"
            android:background="@drawable/btn_03"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:text="查看错题"
            android:textColor="@color/white"
            android:textSize="@dimen/dimension_26_dp">

        </TextView>


    </LinearLayout>


</LinearLayout>
