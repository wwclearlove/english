<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.ChapterexericseActivity">

    <include layout="@layout/window_touming" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_0_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_48_dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimension_36_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_14_dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon" />


            <TextView
                android:id="@+id/timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimension_10_dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="本次考试错题"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_24_dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dimension_10_dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/question_number"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="第1题"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_types"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/question_type"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="单选"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimension_16_dp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_10_dp"
                    android:text="____ his sister,Jack is quiet and does not easyly make friends with others."
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimension_18_dp" />


                <!--选择-->

                <LinearLayout
                    android:id="@+id/lin_a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension_44_dp"
                    android:layout_marginTop="@dimen/dimension_20_dp"
                    android:background="@color/question_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_a"
                        android:layout_width="@dimen/dimension_28_dp"
                        android:layout_height="@dimen/dimension_28_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_10_dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/defaults" />

                    <TextView
                        android:id="@+id/tv_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_14_dp"
                        android:text="A. Dislike"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_18_dp" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/lin_b"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension_44_dp"
                    android:layout_marginTop="@dimen/dimension_20_dp"
                    android:background="@color/question_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_b"
                        android:layout_width="@dimen/dimension_28_dp"
                        android:layout_height="@dimen/dimension_28_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_10_dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/defaults" />

                    <TextView
                        android:id="@+id/tv_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_14_dp"
                        android:text="B. Unlike"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_18_dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_c"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension_44_dp"
                    android:layout_marginTop="@dimen/dimension_20_dp"
                    android:background="@color/question_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_c"
                        android:layout_width="@dimen/dimension_28_dp"
                        android:layout_height="@dimen/dimension_28_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_10_dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/defaults" />

                    <TextView
                        android:id="@+id/tv_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_14_dp"
                        android:text="C. Alike"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_18_dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimension_44_dp"
                    android:layout_marginTop="@dimen/dimension_20_dp"
                    android:background="@color/question_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_d"
                        android:layout_width="@dimen/dimension_28_dp"
                        android:layout_height="@dimen/dimension_28_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_10_dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/defaults" />

                    <TextView
                        android:id="@+id/tv_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimension_14_dp"
                        android:text="D. Liking"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_18_dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_10_dp"
                    android:gravity="center"
                    android:text="共答2题,答对0题，答错2题，正确率0%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimension_18_dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_10_dp"
                    android:gravity="start"
                    android:text="正确答案：B"
                    android:textColor="@color/key"
                    android:textSize="@dimen/dimension_18_dp" />


                <LinearLayout
                    android:id="@+id/lin_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension_10_dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/question_number"
                        android:padding="@dimen/dimension_2_dp"
                        android:text="解析"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimension_16_dp" />

                    <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimension_10_dp"
                        android:gravity="start"
                        android:text="id	timu_title	timu1	timu2	timu3	timu4	daan1	daan2	daan3	daan4	detail	types	reply
19	The economic recession has meant that job__ is a rare thing.	security 	safety 	protection 	secureness 	A				security. job security是商务英语中的词汇,意思是工作保障,职业安全感. e.g. The workers agreed to forgo a pay increase for the sake of greater job security. 工人们为了工作更保险, 同意放弃增加工资的要求. secure较safe更加抽象,这里工作保障应属于抽象范畴, 且secure的名词形式是security而非secureness."
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimension_18_dp" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <!--下边导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58_dp"
        android:background="@color/bottom_nav"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_navigation_back"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_26_dp"
                android:layout_height="@dimen/dimension_26_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/navigation_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:text="上一题"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_14_dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_answer"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dimension_26_dp"
                android:layout_height="@dimen/dimension_26_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/answer" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:text="查看题解"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_14_dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_26_dp"
                android:gravity="center"
                android:text="3/7"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_16_dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:text="选择题目"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_14_dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bt_unstar"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_sc"
                android:layout_width="@dimen/dimension_26_dp"
                android:layout_height="@dimen/dimension_26_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/bt_unstar" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:text="收藏"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_16_dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_navigation_forward"
            android:layout_width="@dimen/dimension_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimension_26_dp"
                android:layout_height="@dimen/dimension_26_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/navigation_forward" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimension_4_dp"
                android:text="下一题"
                android:textColor="@color/white"
                android:textSize="@dimen/dimension_16_dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
